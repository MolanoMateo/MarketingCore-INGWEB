@model IEnumerable<MarketingCORE.Models.campanaView>

@{
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <title>Campañas</title>
</head>
<body>
    <hr />
    @using (Html.BeginForm("Index", "Campanas", FormMethod.Get))
    {
        <p>
            Objetivo: @Html.TextBox("objetivo", ViewBag.objetivo as string)
            Canal: @Html.TextBox("canal", ViewBag.canal as string)
            Nombre Buyer: @Html.TextBox("buyer", ViewBag.buyer as string)
            <input type="submit" value="Filtrar" />
        </p>
    }
<p>
        <a asp-action="Create" class="btn btn-info" data-mdb-ripple-init>Nueva Campaña</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.campana.Objetivo)
            </th>
            <th>
                    @Html.DisplayNameFor(model => model.campana.Canal)
            </th>
            <th>
                    @Html.DisplayNameFor(model => model.campana.Presupuesto)
            </th>
            <th>
                    @Html.DisplayNameFor(model => model.campana.Frecuencia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.buyer.Nombre)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                        @Html.DisplayFor(modelItem => item.campana.Objetivo)
            </td>
            <td>
                        @Html.DisplayFor(modelItem => item.campana.Canal)
            </td>
            <td>
                        @Html.DisplayFor(modelItem => item.campana.Presupuesto)
            </td>
            <td>
                        @Html.DisplayFor(modelItem => item.campana.Frecuencia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.buyer.Nombre)
            </td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@item.campana.Id" class="btn btn-danger btn-floating" data-mdb-ripple-init>
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z" />
                                <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z" />
                            </svg>
                        </a>
                    </td>
                    
        </tr>
}
    </tbody>
</table>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
