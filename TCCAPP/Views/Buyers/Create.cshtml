@model MarketingCORE.Models.Buyer

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        .gradient-custom {
            /* fallback for old browsers */
            background: #f6d365;
            /* Chrome 10-25, Safari 5.1-6 */
            background: -webkit-linear-gradient(to right bottom, rgba(246, 211, 101, 1), rgba(253, 160, 133, 1));
            /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
            background: linear-gradient(to right bottom, rgba(246, 211, 101, 1), rgba(253, 160, 133, 1))
        }</style>
</head>
<body>

    <section class="vh-100" style="background-color: #f4f5f7;">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col col-lg-6 mb-4 mb-lg-0">
                    <div class="card mb-3" style="border-radius: .5rem;">
                        <div class="row g-0">
                            <div class="col-md-4 gradient-custom text-center text-white"
                                 style="border-top-left-radius: .5rem; border-bottom-left-radius: .5rem;">
                                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava1-bg.webp"
                                     alt="Avatar" class="img-fluid my-5" style="width: 80px;" />
                                
                            </div>
                            <div class="col-md-8">
                                <div class="card-body p-4">
                                    <h6>Information</h6>
                                    <hr class="mt-0 mb-4">
                                    <form asp-action="Create">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <div class="row pt-1">
                                            <div class="form-group">
                                                <h6>Nombre</h6>
                                                <input asp-for="Nombre" class="form-control" />
                                                <span asp-validation-for="Nombre" class="text-danger"></span>
                                            </div>
                                        </div>
                                    <div class="row pt-1">
                                            <div class="col-6 mb-3 form-group">
                                            <h6>Edad</h6>
                                                <input asp-for="Edad" class="form-control" />
                                                <span asp-validation-for="Edad" class="text-danger"></span>
                                        </div>
                                            <div class="col-6 mb-3 form-group">
                                            <h6>Genero</h6>
                                                <input asp-for="Genero" class="form-control" />
                                                <span asp-validation-for="Genero" class="text-danger"></span>
                                        </div>
                                            <div class="col-6 mb-3 form-group">
                                            <h6>Ingresos</h6>
                                                <input asp-for="Ingresos" class="form-control" />
                                                <span asp-validation-for="Ingresos" class="text-danger"></span>
                                        </div>
                                            <div class="col-6 mb-3 form-group">
                                            <h6>Geografía</h6>
                                                <input asp-for="Geografia" class="form-control" />
                                                <span asp-validation-for="Geografia" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <h6>Aspectos</h6>
                                    <hr class="mt-0 mb-4">
                                    <div class="row pt-1">
                                            <div class="col-6 mb-3 form-group">
                                            <h6>Intereses</h6>
                                                <input asp-for="Intereses" class="form-control" />
                                                <span asp-validation-for="Intereses" class="text-danger"></span>
                                        </div>
                                            <div class="col-6 mb-3 form-group">
                                            <h6>Frustraciones</h6>
                                                <input asp-for="Frustraciones" class="form-control" />
                                                <span asp-validation-for="Frustraciones" class="text-danger"></span>
                                        </div>
                                    </div>
                                        <div class="form-group">
                                            <input type="submit" value="Guardar" class="btn btn-primary" />
                                            <a asp-action="Index">Cancelar</a>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
